mickey_mouse = Actor("mickey_mouse")

def draw():
    screen.blit("disney_landscape.jpg",(0,0))
    mickey_mouse.draw()
    screen.draw.text(str(score),center = (50,10))
score = 0

def update():
    if keyboard.right:
        mickey_mouse.x += 5
    elif keyboard.left:
        mickey_mouse.x += -5
    elif keyboard.up:
        mickey_mouse.y += -5
    elif keyboard.down:
        mickey_mouse.y += 5


pgzrun.go()